/**
 * Blog recent posts widget
 *
 * @var $block \Magefan\Blog\Block\Widget\Recent
 */
?>

<?php
    $_postCollection = $block->getPostCollection();
?>
<?php if ($_postCollection->count()) { ?>
<div class="post-list-wrapper blog-widget-recent custom">
    <h3 class="title text-center"><?php echo $block->escapeHtml($block->getTitle()) ?></h3>
    <ul class="post-list clearfix">
        <?php foreach ($_postCollection as $_post) { ?>
            <?php
                $_postUrl = $_post->getPostUrl();
                $_postName = $block->escapeHtml($_post->getTitle(), null, true);
            ?>
            <li class="post-holder post-holder-<?php echo $_post->getId() ?>">
                <div class="post-header">

                    <?php if ($featuredImage = $_post->getFeaturedImage()) { ?>
                        <div class="post-ftimg-hld">
                            <a href="<?php echo $_postUrl ?>" title="<?php echo $_postName ?>">
                                <img src="<?php echo $featuredImage ?>" alt="<?php echo $_postName ?>" />
                            </a>
                        </div>
                    <?php } ?>

                    <div class="post-infos clear">
                        <div class="item post-posed-date">
                            <span class="day"><?php echo $_post->getPublishDate('d') ?></span>
                            <span class="month"><?php echo $_post->getPublishDate('M') ?></span>
                        </div>
                    </div>

                    <div class="post-title clearfix">
                        <a class="post-item-link"
                           href="<?php echo $_postUrl ?>">
                            <?php echo $_postName; ?>
                        </a>
                    </div>
                </div>
            </li>

        <?php } ?>
    </ul>
</div>
<?php } ?>